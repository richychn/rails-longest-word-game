<p id="letters">Your letters are:
  <% @grid.each do |letter| %>
  <%= letter %>
  <% end %>
</p>
<form action="/score" class="form-group form-inline">
  <label for="response">What is the longest word you can make with the above letters?</label><br>
  <input class="form-control" type="text" id="response" name="query" placeholder="word">
  <input type="hidden" name="grid" value="<%= @grid.join("") %>">
  <input type="hidden" name="start" value="<%= @start %>">
  <input class="btn btn-primary" type="submit" value="Check your score!">
</form>
